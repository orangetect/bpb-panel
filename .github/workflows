name: Build and Deploy

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      # Step 1: Checkout the code
      - name: Checkout code
        uses: actions/checkout@v2

      # Step 2: 确认文件存在
      - name: 确认文件存在
        run: |
          echo "Listing files in ./helpers directory:"
          ls -R ./helpers
          echo "Listing files in ./protocols directory:"
          ls -R ./protocols
          echo "Listing files in ./authentication directory:"
          ls -R ./authentication

      # Step 3: 安装依赖（如果有）
      - name: Install dependencies
        run: npm install

      # Step 4: 构建项目
      - name: Build project
        run: npm run build

      # Step 5: 部署（例如，部署到 GitHub Pages）
      - name: Deploy
        run: npm run deploy
